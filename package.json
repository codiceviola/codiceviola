{
  "name": "codiceviola",
  "version": "1.0.3",
  "description": "The codice viola association website",
  "main": "index.js",
  "repository": "https://github.com/puria/codice_viola",
  "author": "pna",
  "license": "MIT",
  "scripts": {
    "css-build": "node-sass --omit-source-map-url ./src/sass/codiceviola.scss ./src/dist/codiceviola.css",
    "css-watch": "npm run css-build -- --watch",
    "serve": "http-server ./src",
    "clean": "rimraf src/dist",
    "start": "npm-run-all --parallel css-watch serve",
    "version": "npm version patch",
    "deploy": "npm run css-build && npm run version && scp -r src/* www:/var/www/codiceviola.org/www/"
  },
  "dependencies": {
    "bulma": "^0.7.2",
    "node-sass": "^4.10.0"
  },
  "devDependencies": {
    "http-server": "^0.11.1",
    "npm-run-all": "^4.1.3"
  }
}
